        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Green_T_700</item>
        <item name="colorSecondaryVariant">@color/Green_T_200</item>
        <item name="colorOnSecondary">@color/Green_black</item>
        <item name="android:background">@color/Green_200</item>
        <item name="materialButtonStyle">@style/myButtonStyleGreen</item>
    </style>

    <style name="my_themes_blue" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/Blue_500</item>
        <item name="colorPrimaryVariant">@color/Blue_200</item>
