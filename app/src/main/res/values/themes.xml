        <item name="colorOnSecondary">@color/Space_black</item>
        <item name="android:background">@color/Space_white</item>
        <item name="materialButtonStyle">@style/myButtonStyleSpaceGray</item>


    </style>

    <style name="my_themes_green" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/Green_700</item>
